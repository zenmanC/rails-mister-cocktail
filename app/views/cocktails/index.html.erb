<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.2) 0%, rgba(0,36,61,0.6) 50%), url('https://res.cloudinary.com/deux1dbrg/image/upload/v1542350642/stanlee.png');">
  <div class="banner-content">
    <h1>Stan's Cocktails</h1>
    <p>Thanks Stan</p>
  </div>
</div>

<div class="wrapper" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.1)), url('');">
  <div class="container">
    <div class="row">
      <% @cocktails.each do |cocktail| %>

        <div class="col-xs-12 col-sm-4">

          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.1)), url('');">

          <div class="card-description">
            <h3><%= link_to cocktail.name, cocktail_path(cocktail) %></h3>
          </div>

          <%= cl_image_tag cocktail.photo, height: 210, width: 185, crop: :fill %>

          <%= link_to "Delete", cocktail_path(cocktail),
            method: :delete,
            data: { confirm: "Are you sure?" } %>

          </div>

        </div>
      <% end %>
    </div>
  </div>
</div>
