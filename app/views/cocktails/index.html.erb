<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url("https://res.cloudinary.com/deux1dbrg/image/upload/v1542350642/stanlee.png
");">
  <div class="banner-content">
    <h1>Stan's Cocktails</h1>
    <p>Thanks Stan</p>
    <a class="btn btn-primary btn-lg">Start now</a>
  </div>
</div>


<div class="container">
  <div class="row">
    <div>

      <% @cocktails.each do |cocktail| %>
        <h3><%= link_to cocktail.name, cocktail_path(cocktail) %></h3>
        <img src="">Image Here</img>

        <%= link_to "Delete", cocktail_path(cocktail),
        method: :delete,
        data: { confirm: "Are you sure?" } %>
      <% end %>

    </div>
  </div>
</div>
