<h1>Stan's Cocktails</h1>


<%= cl_image_tag("xjx8fi7kizg9oshv1pdv",
      width: 400, height: 300, crop: :fill) %>


<div class="container">
  <div class="row">
    <div>

      <% @cocktails.each do |cocktail| %>
        <h3><%= link_to cocktail.name, cocktail_path(cocktail) %></h3>
        <img src="">Image Here</img>

        <%= link_to "Delete", cocktail_path(cocktail),
        method: :delete,
        data: { confirm: "Are you sure?" } %>
      <% end %>

    </div>
  </div>
</div>
