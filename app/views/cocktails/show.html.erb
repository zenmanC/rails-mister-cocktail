<h1><%= @cocktail.name %></h1>

<img src=""> Large image will go here</img>

<div>
    <ul>
      <% @cocktail.doses.each do |dose| %>
        <li> <%= dose.ingredient.name %>  <%= dose.description %> </li>

        <%= link_to "Delete", dose_path(dose),
        method: :delete,
        data: { confirm: "Are you sure?" } %>

      <% end %>
    </ul>
</div>

<%= link_to "Back to cocktails", cocktails_path %>

<%= link_to "Add dose", new_cocktail_doses_path(@cocktail), class: "btn btn-primary" %>


